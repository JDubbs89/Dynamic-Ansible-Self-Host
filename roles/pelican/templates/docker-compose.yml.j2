version: '3.8'

services:
  panel:
    image: "pelican-dev/panel:latest"
    container_name: pelican_panel
    restart: unless-stopped
    stdin_open: true
    tty: true
    volumes:
      - ./panel/data:/pelican-data
      - ./panel/logs:/var/www/html/storage/logs
      - ./Caddyfile:/etc/caddy/Caddyfile
    environment:
      TZ: {{ timezone }}
      APP_TIMEZONE: {{ timezone }}
      APP_ENV: production
      APP_URL: "https://{{ pelican_panel_domain }}"
      ADMIN_EMAIL: {{ pelican_admin_email }}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.pelican-panel.rule=Host(`{{ pelican_panel_domain }}`)"
      - "traefik.http.routers.pelican-panel.entrypoints=web-secure"
      - "traefik.http.routers.pelican-panel.tls=true"
      - "traefik.http.routers.pelican-panel.tls.certresolver=letsencrypt"
      - "traefik.http.services.pelican-panel.loadbalancer.server.port=80"
    networks:
      - traefik
      - pelican

  wings:
    image: "pelican-dev/wings:latest"
    container_name: pelican_wings
    restart: unless-stopped
    ports:
      - "2022:2022"    # SFTP
      - "8443:443"     # Wings API (will be proxied by Traefik)
    stdin_open: true
    tty: true
    environment:
      TZ: {{ timezone }}
      APP_TIMEZONE: {{ timezone }}
      WINGS_UID: 1000
      WINGS_GID: 1000
      WINGS_USERNAME: pelican
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock"
      - "/var/lib/docker/containers/:/var/lib/docker/containers/"
      - "/etc/pelican/:/etc/pelican/"
      - "/var/lib/pelican/:/var/lib/pelican/"
      - "/var/log/pelican/:/var/log/pelican/"
      - "/tmp/pelican/:/tmp/pelican/"
      - "/etc/ssl/certs:/etc/ssl/certs:ro"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.pelican-wings.rule=Host(`{{ pelican_wings_domain }}`)"
      - "traefik.http.routers.pelican-wings.entrypoints=web-secure"
      - "traefik.http.routers.pelican-wings.tls=true"
      - "traefik.http.routers.pelican-wings.tls.certresolver=letsencrypt"
      - "traefik.http.services.pelican-wings.loadbalancer.server.port=443"
      - "traefik.http.services.pelican-wings.loadbalancer.server.scheme=http"
    networks:
      - traefik
      - wings1

networks:
  traefik:
    external: true
  pelican:
    name: pelican
  wings1:
    name: wings1
    driver: bridge
    ipam:
      config:
        - subnet: 172.50.0.0/16
    driver_opts:
      com.docker.network.bridge.name: wings1
